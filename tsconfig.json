{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["./src/*"]
		}
	},
	"exclude": ["node_modules"]
}
